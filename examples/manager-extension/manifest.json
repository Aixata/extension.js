{
  "name": "Extension.js Developer Tools",
  "description": "Utility for developers to manage their extensions.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "chromium:service_worker": "background.js",
    "firefox:scripts": ["background.js"],
    "type": "module"
  },
  "icons": {
    "16": "./public/logo.png",
    "48": "./public/logo.png",
    "128": "./public/logo.png"
  },
  "permissions": ["management", "tabs", "storage"]
}
