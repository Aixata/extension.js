  "name": "webpack-browser-extension-resolve",
  "version": "1.0.0",
  "description": "A webpack plugin to resolve paths in browser extension APIs",
  "main": "./dist/module.js",
  "types": "./dist/module.d.ts",
  "author": {
    "name": "Cezar Augusto",
