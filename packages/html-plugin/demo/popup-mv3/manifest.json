{
  "manifest_version": 3,
  "name": "Popup MV3",
  "version": "1.0.0",
  "action": {
    "default_popup": "dist/action.popup.html",
    "default_title": "Test"
  },
  "background": {
    "service_worker": "./dist/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/dist/*.json",
        "/dist/*.js",
        "/dist/*.css",
        "/dist/*.js.map"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"]
}
