{
  "name": "Extension.js Developer Tools (Firefox)",
  "description": "Utility for developers to manage their extensions using Firefox.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "icons": {
    "16": "./public/logo.png",
    "48": "./public/logo.png",
    "128": "./public/logo.png"
  },
  "permissions": ["management", "tabs", "storage"]
}
