  "engines": {
    "node": ">=18"
  },
  "name": "webpack-browser-extension-scripts-plugin",
  "version": "1.0.0",
  "description": "webpack plugin to handle manifest script assets (background, content scripts, content css, service worker) from browser extensions",
  "main": "./dist/module.js",
  "types": "./dist/module.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Cezar Augusto",
    "email": "boss@cezaraugusto.net",
    "url": "https://cezaraugusto.com"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "watch": "yarn compile --watch",
    "compile": "tsup-node ./module.ts ./loaders/* --format cjs --dts --target=node18 --minify",
    "lint": "eslint \"./**/*.ts*\"",
    "test": "echo \"Note: no test specified\" && exit 0"
  },
  "keywords": [
    "webpack",
    "plugin",
    "browser",
    "web",
    "extension",
    "web-ext",
    "service worker",
    "worker",
    "background",
    "content",
    "script",
    "scripts",
    "css",
    "manifest",
    "manifest.json"
  ],
