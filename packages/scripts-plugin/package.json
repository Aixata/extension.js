    "webpack": "^5.0.0"
  },
  "dependencies": {
    "browser-extension-manifest-fields": "*"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "tsconfig": "*",
    "eslint-config-extension-create": "*",
    "jasmine": "^5.1.0",
    "mini-css-extract-plugin": "^2.7.7",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "webpack": "^5.89.0",
